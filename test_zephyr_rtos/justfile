# Zephyr RTOS Test Project
# Test CMake Nix generator with Zephyr RTOS

# Build Zephyr dining philosophers sample with Nix
build-via-nix:
    cd zephyr && nix-shell ../shell-zephyr.nix --run 'just build-via-nix'

# Run the test
run: build-via-nix
    cd zephyr && nix-shell ../shell-zephyr.nix --run 'just run'

# Clean generated files
clean:
    cd zephyr && just clean